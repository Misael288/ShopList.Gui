<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopList.Gui.Views.ItemDetailsPage"
             xmlns:viewmodel="clr-namespace:ShopList.Gui.ViewModels"
             x:DataType="viewmodel:ItemDetailsViewModel"
             Title="Detalles del articulo">

    <VerticalStackLayout
        Padding="16"
        Spacing="8">

        <Label 
            Text="Articulo"/>

        <Entry 
            Text="{Binding Nombre}"
            BackgroundColor="#f0f0f0"/>

        <Label
            Text="Cantidad"/>

        <Entry 
            Text="{Binding Cantidad}"
            BackgroundColor="#f0f0f0"/>

        <HorizontalStackLayout
            HorizontalOptions="Center"
            Spacing="32"
            Margin="0,24,0,0">
            <Button
                Text="Guardar"
                Command="{Binding GuardadCommand}"/>

            <Button
                Text="Cancelar"
                Command="{Binding CancelarCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>